PROCEDURE sort(VAR arr : ARRAY_OF INTEGER, VAR NC : INTEGER)
VAR
   i,j,n,y,NC : INTEGER;
BEGIN
   n := arr.length;
   FOR i FROM 0 TO n- 1 DO
       FOR j  FROM 0 TO n-i-1 DO
           IF (NC > arr[j]) THEN
               y:=arr[j];
               arr[j]:=NC;
               arr[j-1]:=y;
           END_IF
       END_FOR
   END_FOR
END

!ALGORITHM sorting
VAR
    arr : ARRAY_OF INTEGER;
    NC : INTEGER;
BEGIN
    sort(arr,NC)
END